<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="TTS3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="TTS3" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top menu bar -->
        <Menu x:Name="MainMenu" Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="E_xit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem x:Name="toolsMenu" Header="_Tools">
                <MenuItem Header="_Test Selection" Click="TestSelection_Click"/>
                <MenuItem Header="_Stop Test" Click="StopTestSelection_Click"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About" Click="About_Click"/>
            </MenuItem>
        </Menu>

        <!-- Main content -->
        <Grid Grid.Row="1" Margin="0,8,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Rich text area for content -->
            <RichTextBox x:Name="rtbTextContent" Grid.Column="0" Margin="4"
                         AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

            <!-- Right panel: simple controls and log -->
            <DockPanel Grid.Column="1" Margin="4">
                <StackPanel DockPanel.Dock="Top" Orientation="Vertical" Margin="0,0,0,8">
                    <Button x:Name="btnConvert" Content="Convert" Margin="0,0,0,6" Click="Convert_Click"/>
                    <Button x:Name="btnTestSelection" Content="Test Selection" Margin="0,0,0,6" Click="TestSelection_Click"/>
                    <Button x:Name="btnStopTestSelection" Content="Stop Test" Margin="0,0,0,6" Click="StopTestSelection_Click"/>
                    <ComboBox x:Name="cmbOutputFormat" Margin="0,0,0,6">
                        <ComboBoxItem Content="mp3" IsSelected="True"/>
                        <ComboBoxItem Content="wav"/>
                    </ComboBox>
                    <CheckBox x:Name="chkRetainUnmergedFiles" Content="Keep subfiles" Margin="0,0,0,6"/>
                    <ComboBox x:Name="quickReplacementsCombo" Margin="0,0,0,6"/>
                    <ComboBox x:Name="tagToolbox" Margin="0,0,0,6">
                        <ComboBoxItem Content="&lt;delay=1sec&gt;"/>
                    </ComboBox>
                    <ComboBox x:Name="regionCombo" Margin="0,0,0,6"/>
                    <Slider x:Name="sliderRate" Minimum="0.5" Maximum="2" Value="1" Margin="0,0,0,6"/>
                    <Slider x:Name="sliderVolume" Minimum="0" Maximum="1" Value="1" Margin="0,0,0,6"/>
                </StackPanel>

                <TextBox x:Name="txtLog" DockPanel.Dock="Bottom" Margin="0,8,0,0"
                         Height="200" IsReadOnly="True" TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"/>
            </DockPanel>
        </Grid>

        <!-- Status bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="txtStatus" Text="Ready"/>
            </StatusBarItem>
            <StatusBarItem>
                <ProgressBar x:Name="progressBar" Width="200" Height="16" Minimum="0" Maximum="100"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
